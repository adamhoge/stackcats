@{
    ViewData["Title"] = "Home";
}

@section CSS {
    <link href="~/css/home/home.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/Home/index.js"></script>
}

<div class="my-5">
    <div class="container">
        <div class="d-flex justify-content-center">
            <img id="home-logo" src="~/sprites/logo.svg" />
        </div>
        <div class="d-flex justify-content-center">
            <h3 id="summary-text" class="text-center mt-3">A block-stacking cat-collecting puzzle adventure.</h3>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <a class="btn btn-lg btn-primary" data-toggle="modal" data-target="#modal-notify-me">Notify Me When It's Out!</a>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-notify-me" tabindex="-1" role="dialog" aria-labelledby="modal-notify-me-title" aria-hidden="true">
    <form>
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-notify-me-title">Notify Me When It's Out!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fa fa-times"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="email-address">Email Address</label>
                        <input type="email" class="form-control" id="email-address" aria-describedby="email-address-info" placeholder="Enter email">
                        <small id="email-address-info" class="form-text text-muted">We'll only use your email to notify you when the game is released.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind</button>
                    <button id="submit-request-release-notification" type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>