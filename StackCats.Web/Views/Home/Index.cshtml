@{
    ViewData["Title"] = "Home";
}

@section CSS {
    <link href="~/css/home/home.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=@ViewData["ReCaptchaClientKey"]"></script>
    <script src="~/js/Home/index.js"></script>
}

<input id="recaptcha-client-key" type="hidden" value="@ViewData["ReCaptchaClientKey"]" />

<div class="my-5">
    <div class="container">
        <div class="d-flex justify-content-center">
            <img id="home-logo" src="~/sprites/logo.svg" />
        </div>
        <div class="d-flex justify-content-center">
            <h3 id="summary-text" class="text-center mt-3">A block-stacking cat-collecting<br />puzzle adventure.</h3>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <a class="btn btn-lg btn-primary" data-toggle="modal" data-target="#modal-notify-me">Notify Me When It's Out!</a>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-notify-me" tabindex="-1" role="dialog" aria-labelledby="modal-notify-me-title" aria-hidden="true">
    <form>
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-notify-me-title">Notify Me When It's Out!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fa fa-times"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-3">
                            <img class="ml-2 img-fluid" src="~/sprites/home/mail-cat.svg" />
                        </div>
                        <div class="col-9">
                            <div class="form-group mb-3">
                                <label for="email-address">Email Address</label>
                                <input type="email" class="form-control" id="email-address" aria-describedby="email-address-info" placeholder="Enter email">
                                <small id="email-address-info" class="form-text text-muted">Your email will not be shared and will only be used to notify you when the game is released.</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="cancel-request-release-notification" type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind</button>
                    <button id="submit-request-release-notification" type="submit" class="btn btn-primary">
                        Submit
                        <i id="request-release-notification-spinner" class="fa fa-hourglass-half fa-spin ml-1" role="status">
                            <span class="sr-only">Submitting...</span>
                        </i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>