
@{
    ViewData["Title"] = "Media";
}

@section CSS  {
    <link href="~/css/media/index.min.css" rel="stylesheet" />
}

<div class="container">
    <h2 class="page-header"><i class="fa fa-film"></i> Media</h2>
        
    <div class="row">
        <div class="col-lg-4">
            <div class="card card-media">
                <div class="card-body">
                    <h5 class="card-title">Images</h5>
                    <div class="card-media-quick-content"></div>
                    <a asp-controller="Media" asp-action="Images" class="btn btn-primary">Browse Images</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card card-media">
                <div class="card-body">
                    <h5 class="card-title">Videos</h5>
                    <div class="card-media-quick-content"></div>
                    <a asp-controller="Media" asp-action="Videos" class="btn btn-primary">Browse Videos</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card card-media">
                <div class="card-body">
                    <h5 class="card-title">Music</h5>
                    <div class="card-media-quick-content"></div>
                    <a asp-controller="Media" asp-action="Music" class="btn btn-primary">Browse Music</a>
                </div>
            </div>
        </div>
    </div>    
</div>
